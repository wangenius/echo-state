{
	"name": "echo-state",
	"version": "1.1.0",
	"description": "一个轻量级的状态管理库，支持本地存储和 IndexedDB",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rollup -c",
		"test": "jest",
		"prepublishOnly": "npm run build",
		"lint": "eslint . --ext .ts",
		"format": "prettier --write \"src/**/*.ts\"",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"keywords": [
		"state-management",
		"zustand",
		"localStorage",
		"indexedDB"
	],
	"author": "wangenius@qq.com",
	"license": "MIT",
	"dependencies": {
		"localforage": "^1.10.0"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^25.0.0",
		"@rollup/plugin-node-resolve": "^15.0.0",
		"@rollup/plugin-typescript": "^11.0.0",
		"@types/jest": "^29.0.0",
		"jest": "^29.0.0",
		"rollup": "^4.0.0",
		"typescript": "^5.0.0",
		"tslib": "^2.6.0",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"eslint": "^8.0.0",
		"eslint-config-prettier": "^8.0.0",
		"eslint-plugin-prettier": "^4.0.0",
		"prettier": "^2.0.0",
		"ts-jest": "^29.0.0"
	},
	"peerDependencies": {
		"react": ">=16.8.0",
		"zustand": "^4.5.0"
	},
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wangenius/echo-state.git"
	},
	"bugs": {
		"url": "https://github.com/wangenius/echo-state/issues"
	},
	"homepage": "https://github.com/wangenius/echo-state#readme",
	"sideEffects": false
}